<div class="container position-absolute top-50 start-50 translate-middle">
    <div class="mb-5">
        <h2 class="text-center">History</h2>
    </div>
    <div class="return-home position-absolute">
        <span data-bs-toggle="tooltip" data-bs-placement="top" title="Home">
            <a href="/home"><i class="fas fa-shopping-cart fs-3"></i></a>
        </span>
    </div>
    <div class="cart position-absolute">
        <span data-toggle="tooltip" data-bs-placement="top" title="Cart">
            <a href="/cart"><i class="fas fa-shopping-basket fs-3"></i></a>
        </span>
    </div>
    <div class="cart-content">
        {{#if historyCarts}}
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Time</th>
                        <th scope="col">Totals($)</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each historyCarts}}
                        <tr>
                            <th scope="row">{{sum @index 1}}</th>
                            <td style="white-space: pre;">{{changeTime this.id}}</td>
                            <td>{{this.totals}}$</td>
                            <td>
                                <a href="/history/{{this.id}}">Details</a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
            </table>
        {{else}}
            <p class="text-center mt-5">History is empty!</p>
        {{/if}}
    </div>  
</div>