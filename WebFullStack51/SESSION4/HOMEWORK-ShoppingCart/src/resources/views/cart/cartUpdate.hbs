<div class="container position-absolute top-50 start-50 translate-middle">
  <div class="mb-5">
      <h2 class="text-center">Update Cart</h2>
  </div>
  <div class="content">
      <div class="home-buy"> 
        <div class="return-home position-absolute">
          <span data-bs-toggle="tooltip" data-bs-placement="top" title="Home">
              <a href="/home"><i class="fas fa-shopping-cart fs-3"></i></a>
          </span>
        </div>
        <div class="cart position-absolute">
          <span data-toggle="tooltip" data-bs-placement="top" title="Cart">
              <a href="/cart"><i class="fas fa-shopping-basket fs-3"></i></a>
          </span>
        </div>
        <div class="card mb-3">
          <div class="row g-0">
            <div class="col-md-6">
              <img src="{{fruitUpdate.image}}" class="img-fluid rounded-start" alt="image_{{fruitUpdate.name}}">
            </div>
            <div class="col-md-6">
              <div class="card-body">
                <h2 class="card-title">{{fruitUpdate.name}}</h2>
                <p class="card-text">Origin: {{fruitUpdate.origin}}</p>
                <p class="card-text">Price: {{fruitUpdate.price}}$ / 1Kg</p>
                <form action="/cart/{{fruitUpdate.id}}?_method=PUT" method="POST">
                  <label for="amount"><p class="card-text">Amount:</p></label>
                  <input type="number" id="amount" min="1" name="amount" value="{{fruitUpdate.amount}}" >
                  <h3 class="mt-3">Total: <span id="total"></span></h3>
                  <button class="buyBtn mt-2 btn btn-success" type="submit">UPDATE</button>
                </form>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
  <div class="footer position-absolute">
      {{> footer}}
  </div>  
</div>

<script>
  const total = document.getElementById('total');
  const amount = document.getElementById('amount');
  total.textContent = amount.value * {{fruitUpdate.price}} + '$';
  amount.addEventListener('input', () => {
    total.textContent = amount.value * {{fruitUpdate.price}} + '$';
  })
</script>


