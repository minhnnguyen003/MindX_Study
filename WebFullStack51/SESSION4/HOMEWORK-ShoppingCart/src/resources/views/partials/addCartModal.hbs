<div class="modal fade" id="addCartModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form class="form-add-cart" action="/history" method="POST">
          <p class="text-center fs-4 del-modal-name">Do you agree to buy?</p>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-success btn-add-car">Buy Now</button>
      </div>
    </div>
  </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const addIcon = document.querySelector('.cart-buy');
        const form = document.querySelector('.form-add-cart');
        document.querySelector('.btn-add-car').addEventListener('click', () => {
            form.submit();
        })
    })
</script>